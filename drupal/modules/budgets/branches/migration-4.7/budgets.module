        foreach ($edit['fund_status'] as $fund_id=>$new_status) {
//          $output .= sprintf("\n<br />FundID: %d NewStatus: %s Status:%s\n<br />",$fund_id,$new_status,$node->funds[$fund_id - 1]['fund_status']);
          if ($node->funds[$fund_id - 1]['fund_status'] != $new_status) {
