  }}
  $rows[] = array(
                 '<strong>Total</strong',null,
                 array('data'=>'<strong>'.number_format($total,2,',','.').$node->currency_symbol.'</strong>','align'=>'right'),
                 null,null);
  $header = array(t('Date'),t('Name'),t('Amount'),t('Status'));
