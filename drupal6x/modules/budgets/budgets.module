/**
* Implementation of hook_access().
*/
function budgets_access($op, $node) {

  switch($op) {
    case 'create':
      return user_access('create budgets');
    case 'update':
      if ($node->type == 'budget') {
        if ((user_access('administer budgets')) || ($node->uid == $user->uid)) {
          return TRUE;
        }
        else {
          return FALSE;
        }
      }
      else {
        return user_access('create budgets');
      }
  }
}

