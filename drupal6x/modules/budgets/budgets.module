function budgets_item_form($item) {

  $it = $item;
  unset($it['weight']);
  if (empty($it)) {
    $title = t('New item (unfold to fill a new item)');
    $folded = true;
  } else {
    if (empty($item['title']))
      $title = t('item');
    else
      $title = $item['title'];
    
    $title .= str_pad("",10,'_').
      $item['quantity'] .'*'. $item['cost'] .' = '.
      $item['quantity'] * $item['cost'];
       
      
    $folded = false;
  }
  
  $f = array (
    '#type' => 'fieldset',
    '#title' => $title,
    '#tree' => true,
    '#collapsible' => true,
    '#collapsed' => true
  );
  if (isset($item['id']))
    $f['id'] = array(
      '#type' => 'hidden',
